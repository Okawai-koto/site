@model IEnumerable<Bolum>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6">
                    <partial name="_BolumKart" model="@item">
                </div>

            }
        </div>
        <ul class="pagination justify-content-center mt-4">

            @for (int i = 1; i < ViewBag.TotalEpisodes; i++)
            {
                <li class="page-item"><a class="page-link"  asp-action="Index" asp-route-page="@i">@i</a></li>
            }



        </ul>
    </div>
    

    <div class="col-3"></div>
</div>
